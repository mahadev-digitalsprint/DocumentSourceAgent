# Copy this file to `.env` and adjust values for your machine.

# Local-first database (recommended)
DATABASE_URL=sqlite:///./finwatch.db

# Optional: if you want PostgreSQL instead
# POSTGRES_URL=postgresql://user:password@localhost:5432/finwatch

# Redis / Celery
REDIS_URL=redis://localhost:6379/0
CELERY_CONCURRENCY=4

# LLM
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_KEY=
AZURE_OPENAI_DEPLOYMENT=gpt-4.1
AZURE_OPENAI_API_VERSION=2024-12-01-preview
OPENAI_API_KEY=

# Crawler strategy
CRAWLER_MODE=auto
ENABLE_CRAWL4AI=true
MAX_CRAWL_PAGES=200
CRAWL_DOMAIN_DELAY_SECONDS=0.4
CRAWL_BLOCK_COOLDOWN_SECONDS=300
FIRECRAWL_API_KEY=
TAVILY_API_KEY=

# Storage path
BASE_DOWNLOAD_PATH=./downloads
WEBWATCH_CRAWL_DEPTH=3
AUTO_MIGRATE_ON_STARTUP=true
MIGRATION_STRICT=false

# SMTP (optional)
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
NO_REPLY_MAIL_PASSWORD=
EMAIL_FROM=
EMAIL_RECIPIENTS=
